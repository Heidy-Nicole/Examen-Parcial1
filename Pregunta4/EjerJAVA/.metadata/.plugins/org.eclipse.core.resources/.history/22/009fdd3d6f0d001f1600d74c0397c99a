    <h1>Mostrando datos de las personas</h1>
    <%
        try{
            String apiData = (String) request.getAttribute("apiData");

            for(int i = 0; i < apiData.length(); i++){
                char x = apiData.charAt(i);

                if(x == '[' || x == '{' || x == ']' || x == '"'){

                } else {
                    if(x == '}' || x == ',')
                        out.println("<br>");
                    else
                        out.print(x);
                }
            }
            out.println("<br>Datos de la API: " + apiData );

        }
        catch(Exception e){
            out.println("");
        }

    %>

    <br>
    <br>
